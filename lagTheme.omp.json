{
   "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
   "palette": {
      "vermelho": "#F24444",
      "azul": "#04ADBF",
      "azul-marine": "#0D6973",
      "marrom": "#614C33",
      "laranja": "#ED5418",
      "verde": "#21CA1B"
   },
   "blocks": [
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "type": "battery",
               "style": "powerline",
               "powerline_symbol": " ",
               "background": "#1FD4A0",
               "foreground": "#000000",
               "template": "{{ if not .Error }}{{ .Icon }}{{ if ne \"Full\" .State.String }}{{ .Percentage }}% {{ end }}{{ end }}",
               "properties": {
                  "discharging_icon": " ",
                  "charging_icon": " ",
                  "charged_icon": "󱊦 "
               }
            }
         ],
         "type": "prompt"
      },
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "type": "path",
               "style": "powerline",
               "foreground": "#000000",
               "properties": {
                  "style": "agnoster_full",
                  "folder_separator_icon": " \uf105 ",
                  "cycle": [
                     "#FF3C12",
                     "#9AC724",
                     "#38C724",
                     "#24C798"
                  ]
               }
            }
         ],
         "type": "prompt"
      },
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "foreground": "#FFFFFF",
               "style": "plain",
               "type": "text",
               "template": ":: "
            }
         ],
         "type": "prompt"
      }
   ],
   "transient_prompt": {
      "foreground": "#FFFFFF",
      "template": "\uf105"
   },
   "version": 2
}