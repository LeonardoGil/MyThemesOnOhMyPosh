{
   "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
   "palette": {
      "vermelho": "#F24444",
      "azul": "#04ADBF",
      "azul-marine": "#0D6973",
      "marrom": "#614C33",
      "laranja": "#ED5418",
      "verde": "#21CA1B"
   },
   "blocks": [
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "type": "battery",
               "style": "diamond",
               "leading_diamond": "\ue0b6",
               "trailing_diamond": "\ue0b4",
               "background_templates": [
                  "{{if eq \"Discharging\" .State.String}}#cc3300{{end}}",
                  "{{if eq \"Charging\" .State.String}}#ffcc00{{end}}",
                  "{{if eq \"Full\" .State.String}}#339900{{end}}"
               ],
               "foreground": "#000000",
               "template": " {{ if not .Error }}{{ .Icon }}{{ if ne \"Full\" .State.String }}{{ .Percentage }}% {{ end }}{{ end }}",
               "properties": {
                  "discharging_icon": " ",
                  "charging_icon": " ",
                  "charged_icon": "󱊦 "
               }
            }
         ],
         "type": "prompt"
      },
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "type": "path",
               "style": "powerline",
               "foreground": "#000000",
               "properties": {
                  "style": "agnoster_full",
                  "folder_separator_icon": " > ",
                  "cycle": [
                     "#FF3C12",
                     "#9AC724",
                     "#38C724",
                     "#24C798"
                  ]
               }
            }
         ],
         "type": "prompt"
      },
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "foreground": "#FFFFFF",
               "style": "plain",
               "type": "text",
               "template": "Run: "
            }
         ],
         "type": "prompt"
      }
   ],
   "transient_prompt": {
      "foreground": "#FFFFFF",
      "template": "<b>- </b>"
   },
   "version": 2
}