{
   "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
   "palette": {
      "vermelho": "#F24444",
      "azul": "#04ADBF",
      "azul-marine": "#0D6973",
      "marrom": "#614C33",
      "laranja": "#ED5418",
      "verde": "#21CA1B"
   },
   "blocks": [
      {
         "alignment": "left",
         "newline": true,
         "segments": [
            {
               "type": "path",
               "style": "powerline",
               "foreground": "#000000",
               "properties": {
                  "style": "agnoster_full",
                  "folder_separator_icon": " > ",
                  "cycle": [
                     "#FF3C12",
                     "#9AC724",
                     "#38C724",
                     "#24C798"
                  ]
               }
            }
         ],
         "type": "prompt"
      },
      {
         "alignment": "left",
         "newline": true ,
         "segments": [
           {
             "foreground": "#FFFFFF",
             "style": "plain",
             "type": "text",
             "template": "Run: "
           }        
         ],
         "type": "prompt"
       }
   ],
   "transient_prompt": {
      "foreground": "#FFFFFF",
      "template": "<b>- </b>"
   },
   "version": 2
}